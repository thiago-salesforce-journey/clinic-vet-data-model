@startuml
title Modelo de Dados - Clínica Veterinária (Salesforce)

' =========================
' OBJETOS PADRÃO
' =========================

entity Account {
  + Id : PK
  --
  Name
  Status__c
}

entity Contact {
  + Id : PK
  --
  FirstName
  LastName
  Email
  Phone
  CPF__c
  CFMV__c
  RecordTypeId
  AccountId : FK
}

' =========================
' OBJETOS CUSTOMIZADOS
' =========================

entity Animal__c {
  + Id : PK
  --
  Nome__c
  Especie__c
  Raca__c
  Sexo__c
  DataNascimento__c
  Status__c
  Tutor__c : FK
}

entity Consulta__c {
  + Id : PK
  --
  DataConsulta__c
  TipoConsulta__c
  StatusConsulta__c
  Animal__c : FK
  Veterinario__c : FK
}

entity Especialidade__c {
  + Id : PK
  --
  Name
  Descricao__c
}

entity VeterinarioEspecialidade__c {
  + Id : PK
  --
  Veterinario__c : FK
  Especialidade__c : FK
}

' =========================
' RELACIONAMENTOS
' =========================

Account "1" -- "0..N" Contact : possui

Contact "1" -- "0..N" Animal__c : tutor

Animal__c "1" -- "0..N" Consulta__c : possui

Contact "1" -- "0..N" Consulta__c : veterinário

Contact "1" -- "0..N" VeterinarioEspecialidade__c
Especialidade__c "1" -- "0..N" VeterinarioEspecialidade__c

@enduml
